@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
    <title>CubeIt</title>

    <!-- use <script src="Url.Content("~/Scripts/jquery-1.5.1.min.js")"></script>
        while developing!
        -->

    <link rel="stylesheet" href="@Url.Content("~/Content/cube.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/page.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")">

    <script src="@Url.Content("~/scripts/cubes/tween.js")"></script>
    <script src="@Url.Content("~/scripts/cubes/Three.noStrict.js")"></script>
    <script src="@Url.Content("~/scripts/cubes/cuber.js")"></script>
    <script src="@Url.Content("~/scripts/jquery-2.2.3.js")"></script>

    <!--
        Styles.Render("~/Content/css")
        Scripts.Render("~/bundles/cubeHead")
    -->
</head>
<body>

<div id="cube_container"></div>

<div id="container" class="container">
    <div class="btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" id="sendToSolver" class="btn btn-success btn-lg">Solve!</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="performQueryResult" class="btn btn-default btn-lg">Perform moves <span id="numberOfMoves" class="badge">-</span></button>
        </div>
    </div>

    <div class="alert alert-info" role="alert" id="queryResult">
        Result is going to be here !
    </div>

    <div class="input-group">
        <span class="input-group-btn">
            <button class="btn btn-default" id="performMoves" type="button">Go!</button>
        </span>
        <input type="text" id="movesToPerformInput" class="form-control" placeholder="Moves to perform...">
    </div>
</div>

<script src="@Url.Content("~/scripts/cubes/iecss3d.js")"></script>
<script src="@Url.Content("~/scripts/cubes/ierenderer.js")"></script>
<script src="@Url.Content("~/scripts/cubes/deviceMotion.js")"></script>
<script src="@Url.Content("~/scripts/cubes/locked.js")"></script>
<script src="@Url.Content("~/scripts/cubes/frames.js")"></script>
<script src="@Url.Content("~/scripts/cubes/main.js")"></script>
<script src="@Url.Content("~/scripts/bootstrap.min.js")"></script>
<!--
    Scripts.Render("~/bundles/cube")
-->
</body>
</html>

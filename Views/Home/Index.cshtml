@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
    <title>Cube IT</title>

    <!-- use <script src="Url.Content("~/Scripts/jquery-1.5.1.min.js")"></script>
        while developing!
        -->

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/cube.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/page.css")">

    <script src="@Url.Content("~/scripts/cubes/tween.js")"></script>
    <script src="@Url.Content("~/scripts/cubes/Three.noStrict.js")"></script>
    <script src="@Url.Content("~/scripts/cubes/cuber.js")"></script>
    <script src="@Url.Content("~/scripts/jquery-2.2.3.js")"></script>

    <!--
        Styles.Render("~/Content/css")
        Scripts.Render("~/bundles/cubeHead")
    -->
</head>
<body>
    <div id="controllers" style="color:black; display: block; margin:15px;"></div>
    <div id="container">
    </div>

    <div id="fail">
        <div class="upgradetext">To play, please use the latest version of one of the following browsers</div>
    </div>

<br>

    <button onclick='window.cube.twist("R");'>R</button>
    <button onclick='window.cube.twist("r");'>R'</button>

    <button onclick='window.cube.twist("s");'>S</button>
    <button onclick='window.cube.twist("f");'>f</button>
    <button onclick='window.cube.twist("b");'>b</button>
    <button onclick='window.cube.twist("u");'>u</button>
    <button onclick='window.cube.twist("e");'>equator</button>

    <button onclick='window.cube.twist("d");'>down</button>
    <button onclick='window.cube.twist("m");'>middle</button>
    <button onclick='window.cube.twist("l");'>L</button>

    <button onclick='window.cube.twist("x");'>X</button>
    <button onclick='window.cube.twist("y");'>Y</button>
    <button onclick='window.cube.twist("z");'>Z</button>

    <br>

    <button id="sendToSolver"> Cube to data</button>
    <button id="performQueryResult"> Perform moves</button>
    <br>
    <span style="font-size: 50px;" id="queryResult">Result are going to be here !</span>

    <script src="@Url.Content("~/scripts/cubes/iecss3d.js")"></script>
    <script src="@Url.Content("~/scripts/cubes/ierenderer.js")"></script>
    <script src="@Url.Content("~/scripts/cubes/deviceMotion.js")"></script>
    <script src="@Url.Content("~/scripts/cubes/locked.js")"></script>
    <script src="@Url.Content("~/scripts/cubes/frames.js")"></script>
    <script src="@Url.Content("~/scripts/cubes/main.js")"></script>
    <!--
        Scripts.Render("~/bundles/cube")
    -->
</body>
</html>
